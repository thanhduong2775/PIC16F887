#include <Mach cam bien nhiet bao khoi.h>
int16 read_adc_lap() // vong lap doc gia tri adc
{ 
   int8 i; 
   float32 adc2=0;                                  
   for (i=0;i<100;i++) // doc 100 lan de lay gia tri trung binh sau 100 lan doc 
   {
      delay_us(100); // tao thoi gian tre us 
      adc2=adc2+read_adc();    
   } 
   return (adc2/100); // he so nay em tinh lai nhe cho phu hop voi cau phan ap va dien ap 24V
} 
//======================================== 
void main() 
{ 
   setup_adc_ports(sAN0|sAN1|sAN2|sAN3|sAN4|sAN5); // thiet lap ADC su dung 6 kenh
   setup_adc(ADC_CLOCK_INTERNAL); // thiet lap xung nhip cho bo ADC là giao dong noi 
   lcd_init();
   lcd_gotoxy(1,1); // dua con tro LCD ve dong 1 cot 1;
   printf(lcd_putc,"HE THONG PHONG  ");
   lcd_gotoxy(1,2); 
   printf(lcd_putc,"  CHAY CHUA CHAY");
   delay_ms(1500);
   output_low(coi); // Tat coi
   output_low(rl); // Tat rl
   output_low(rl1); // Tat rl
   output_low(rl2); // Tat rl
//=======================================;
   while (true) // vong lap vo han
   {
      doc_cam_bien();
      if(canh_bao==0&&canh_bao1==0&&canh_bao2==0)
      {
         lcd_gotoxy(1,1); // dua con tro LCD ve dong 1 cot 1;
         printf(lcd_putc,"CARBIN LAU LAI  ");
         ht_nhiet(nhiet);
         tao_tre(6);
         lcd_gotoxy(1,1); // dua con tro LCD ve dong 1 cot 1;
         printf(lcd_putc,"PHONG CLB       ");
         ht_nhiet(nhiet1);
         tao_tre(6);
         lcd_gotoxy(1,1); 
         printf(lcd_putc,"BUONG TRUNG TAM ");
         ht_nhiet(nhiet2);
         tao_tre(6);
         
      }
      if(canh_bao==1||canh_bao1==1||canh_bao2==1)
      {
         cht=0;
         lcd_gotoxy(1,1); // dua con tro LCD ve dong 1 cot 1;
         printf(lcd_putc,"CARBIN LAU LAI  ");
         if(bao_chay)
            hien_thi_chay();
         else
         {
            ht_nhiet(nhiet);
            tao_tre(6);
         }
         cht=1;
         lcd_gotoxy(1,1); // dua con tro LCD ve dong 1 cot 1;
         printf(lcd_putc,"PHONG CLB       ");
         if(bao_chay1)
            hien_thi_chay();
         else
         {
            ht_nhiet(nhiet1);
            tao_tre(6);
         }
         cht=2;
         lcd_gotoxy(1,1); 
         printf(lcd_putc,"BUONG TRUNG TAM ");
         if(bao_chay2)
            hien_thi_chay();
         else
         {
            ht_nhiet(nhiet2);
            tao_tre(6);
         }
         
      }
    }
}
//======================================== 
void kiem_tra()
{
   if(nhiet>70||khoi>950)
   {
      if(xu_ly_chay==0) // khi chua duoc xu ly 
      {
         output_high(rl);
         if(bao_coi==0)
         {
            output_high(coi);
            dang_bao_coi=1;
         }
      }
      bao_chay=1;
      canh_bao=1;
   }
   else
   {
      if(xu_ly_chay==1)
      {
         xu_ly_chay=0;
         bao_chay=0;
      }
   }
   //---------------------------------------- 
   if(nhiet1>70||khoi1>950)
   {
      if(xu_ly_chay1==0) // khi chua duoc xu ly 
      {
         output_high(rl1);
         if(bao_coi1==0)
         {
            output_high(coi);
            dang_bao_coi1=1;
         }
      }
      bao_chay1=1;
      canh_bao1=1;
   }
   else
   {
      if(xu_ly_chay1==1)
      {
         xu_ly_chay1=0;
         bao_chay1=0;
      }
   }
   //---------------------------------------- 
   if(nhiet2>70||khoi2>950)
   {
      if(xu_ly_chay2==0) // khi chua duoc xu ly 
      {
         output_high(rl2);
         if(bao_coi2==0)
         {
            output_high(coi);
            dang_bao_coi2=1;
         }
      }
      bao_chay2=1;
      canh_bao2=1;
   }
   else
   {
      if(xu_ly_chay2==1)
      {
         xu_ly_chay2=0;
         bao_chay2=0;
      }
   }
}
//======================================== 
void hien_thi_chay()
{
   int8 xl;
   if((xu_ly_chay==0&&cht==0)||(xu_ly_chay1==0&&cht==1)||(xu_ly_chay2==0&&cht==2))
   {
      for(xl=6;xl>0;xl--)
      {
         lcd_gotoxy(1,2); // dua con tro LCD ve dong 1 cot 1;
         printf(lcd_putc,"CHAY - XU LY: %1u  ",xl);
         tao_tre2(2);
      }
   }
   if((xu_ly_chay==1&&cht==0)||(xu_ly_chay1==1&&cht==1)||(xu_ly_chay2==1&&cht==2))
   {
      for(xl=6;xl>0;xl--)
      {
         lcd_gotoxy(1,2); // dua con tro LCD ve dong 1 cot 1;
         printf(lcd_putc,"BAO XU LY LAI: %1u  ",xl);
         tao_tre2(2);
      }
   }
}
//======================================== 
void ht_nhiet(float n)
{
   lcd_gotoxy(1,2); // dua con tro LCD ve dong 1 cot 1;
   if(n<50)
   {
      printf(lcd_putc,"AN TOAN %3.0f",n);
   }
   else
   if(n<70)
   {
      printf(lcd_putc,"NGUY HIEM %3.0f",n);
      output_high(coi);
      tao_tre(1);
      tao_tre(1);
      tao_tre(1);
      output_low(coi);
   }
   else
   if(n>=70)
   {
      printf(lcd_putc,"CO CHAY %3.0f",n);
      tao_tre(1);
      tao_tre(1);
      tao_tre(1);
      tao_tre(1);
   }
   lcd_putc(0xdf);
   lcd_putc('C');
   printf(lcd_putc,"   ");
}
//======================================== 
void tao_tre2(int16 t)
{
   int16 i;
   int8 j;
   for(i=0;i<t;i++)
   {
      for(j=0;j<20;j++)
      {
         delay_ms(10);
         quet_phim();
      }
      doc_cam_bien();
      kiem_tra();
      if((canh_bao==0&&cht==0)||(canh_bao1==0&&cht==1)||(canh_bao2==0&&cht==2)) break;
   }
}
//======================================== 
void tao_tre(int16 t)
{
   int16 i;
   int8 j;
   for(i=0;i<t;i++)
   {
      for(j=0;j<50;j++)
      {
         delay_ms(10);
         quet_phim();
      }
      doc_cam_bien();
      kiem_tra();
      if(canh_bao==1||canh_bao1==1||canh_bao2==1) break;
   }
}
//======================================== 
void doc_cam_bien()
{
   set_adc_channel(0); // chon kenh an0
   nhiet=read_adc_lap(); // doc gia tri tu kenh an0
   nhiet=nhiet*0.488;
   set_adc_channel(1); // chon kenh an0
   khoi=read_adc_lap(); // doc gia tri tu kenh an0  
   set_adc_channel(2); // chon kenh an0
   nhiet1=read_adc_lap(); // doc gia tri tu kenh an0
   nhiet1=nhiet1*0.488;
   set_adc_channel(3); // chon kenh an0
   khoi1=read_adc_lap(); // doc gia tri tu kenh an0  
   set_adc_channel(4); // chon kenh an0
   nhiet2=read_adc_lap(); // doc gia tri tu kenh an0
   nhiet2=nhiet2*0.488;
   set_adc_channel(5); // chon kenh an0
   khoi2=read_adc_lap(); // doc gia tri tu kenh an0  
}
//======================================== 
#define nn1 pin_c4
#define nn2 pin_D3
int1 np=0; // khai bao bit nho co phim nhan, np=0 co phim nhan, np=1 tat ca cac phim deu nha
//========================================
void quet_phim() // chuong trinh con quet nut nhan / quet phim nhan
{
   if (np)
   {
      if (!input(nn1))
      {
         np=0; // bao co nut duoc nhan
         if(dang_bao_coi==1)
         {
            output_low(coi);
            bao_coi=1;
         }
         if(bao_coi==1&&canh_bao==0)
         {
            bao_coi=0;
            dang_bao_coi=0;
         }
         
         if(dang_bao_coi1==1)
         {
            output_low(coi);
            bao_coi1=1;
         }
         if(bao_coi1==1&&canh_bao1==0)
         {
            bao_coi1=0;
            dang_bao_coi1=0;
         }
         
         if(dang_bao_coi2==1)
         {
            output_low(coi);
            bao_coi2=1;
         }
         if(bao_coi2==1&&canh_bao2==0)
         {
            bao_coi2=0;
            dang_bao_coi2=0;
         }
       }
//----------------------------------------
      if (!input(nn2))
      {
         np=0;
         //if(canh_bao>0)
         {
            
            if(cht==0)
            {
               bao_chay=0;
               canh_bao=0;
               kiem_tra();
               if(xu_ly_chay==0)
               {
                  xu_ly_chay=1; // bao da xu ly chay
                  output_low(rl);
                  output_low(coi);
                  bao_coi=0;
                  dang_bao_coi=0;
               }
               else
               {
                  xu_ly_chay=0;
               }
               if(bao_chay==0) // khi van con bao chay
               {
                  xu_ly_chay=0; // bao da xu ly chay
                  output_low(rl);
                  output_low(coi);
                  bao_coi=0;
                  dang_bao_coi=0;
               }
            }
         }
         {
            
            if(cht==1)
            {
               bao_chay1=0;
               canh_bao1=0;
               kiem_tra();
               if(xu_ly_chay1==0)
               {
                  xu_ly_chay1=1; // bao da xu ly chay
                  output_low(rl1);
                  output_low(coi);
                  bao_coi1=0;
                  dang_bao_coi1=0;
               }
               else
               {
                  xu_ly_chay1=0;
               }
               if(bao_chay1==0) // khi van con bao chay
               {
                  xu_ly_chay1=0; // bao da xu ly chay
                  output_low(rl1);
                  output_low(coi);
                  bao_coi1=0;
                  dang_bao_coi1=0;
               }
            }
         }
         {

            if(cht==2)
            {
               bao_chay2=0;
               canh_bao2=0;
               kiem_tra();
               if(xu_ly_chay2==0)
               {
                  xu_ly_chay2=1; // bao da xu ly chay
                  output_low(rl2);
                  output_low(coi);
                  bao_coi2=0;
                  dang_bao_coi2=0;
               }
               else
               {
                  xu_ly_chay2=0;
               }
               if(bao_chay2==0) // khi van con bao chay
               {
                  xu_ly_chay2=0; // bao da xu ly chay
                  output_low(rl2);
                  output_low(coi);
                  bao_coi2=0;
                  dang_bao_coi2=0;
               }
            }
         }
      }
//---------------------------------------- 
   }
   else
   {
      if((input(nn1)==1)&&(input(nn2)==1))
      {
         np=1; // bao khong co nut nhan 
      }
   }
}
